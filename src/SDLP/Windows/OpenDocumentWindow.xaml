<Window x:Class="SDLP.OpenDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDLP"
        mc:Ignorable="d"
        Title="Ouverture du document" Height="110" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="10,10,10,41" TextWrapping="Wrap">
            <Run Text="Ouverture du document"/>
            <Run Text="{Binding FileName}"/>
            <Run Text="en cours. Veuilez patientez !"/>
        </TextBlock>
        <ProgressBar IsIndeterminate="True" Margin="10,45,10,10"/>
    </Grid>
</Window>
